@model AspNet_Core.Models.HomeDetailsViewModel
@{
    var photopath = "~/images/" + (@Model.employee.PhotoPath ?? "WhatsApp Image 2020-05-09 at 10.40.14 PM.jpeg");
    ViewBag.Title = "User Details";
}

<div class="row justify-content-center" m-3>
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.employee.Name</h1>
            </div>
            <div class="card-body text-center">
                <img asp-append-version="true" class="card-img-top imagethumbnail" src=@photopath />

                <h4>Employee ID : @Model.employee.Id</h4>
                <h4>Email : @Model.employee.Email</h4>
                <h4>Department : @Model.employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a asp-action="edit" asp-controller="home" asp-route-id="@Model.employee.Id"
                   class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-primary m-1">Delete</a>
            </div>
        </div>
    </div>
</div>


