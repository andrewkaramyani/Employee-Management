@model IEnumerable<AspNet_Core.Models.Employee>
@{ 
    ViewBag.Title = "Employee List";
}
<div class="card-deck">
    @foreach (var employee in Model)
    {
        var photopath = "~/images/" + (employee.PhotoPath ?? "WhatsApp Image 2020-05-09 at 10.40.14 PM.jpeg");

<div class="card m-3" style="min-width:18rem; max-width:30.5% ">
    <div  class="card-header font-weight-bold">
        @employee.Name
    </div>
    
    <img class="card-img-top  imagethumbnail" src=@photopath asp-append-version="true"/>
    <div class="card-footer text-center">
        <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
           class="btn btn-primary m-1">View</a>
        <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id"
           class="btn btn-primary m-1">Edite</a>
        <a href="#" class="btn btn-danger m-1">Delete</a>
    </div>
</div>
    }

</div>
